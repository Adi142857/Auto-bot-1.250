<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="A short info about the app"
        android:textColor="@color/app_io_logo_tint"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/close_dialog_button"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/icon_close"
        android:clickable="true" />

    <TextView
        android:id="@+id/text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginStart="@dimen/margin_sixteen"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/howdy_user"
        android:textColor="@color/header_color"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_one"
        android:layout_marginStart="@dimen/margin_sixteen"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/i_am"
        android:textColor="@color/header_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/share_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_two"

        android:layout_marginStart="190dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/transparent_background"
        android:drawableStart="@drawable/ic_share_2"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="@string/share"
        android:textAllCaps="true"
        android:textColor="@color/fab_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/github_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_app"
        android:layout_marginStart="@dimen/margin_sixteen"
        android:layout_marginTop="-41dp"
        android:background="@drawable/transparent_background"
        android:drawableStart="@drawable/ic_github"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="@string/source_code"
        android:textAllCaps="true"
        android:textColor="@color/fab_color"
        android:textSize="12sp" />
</RelativeLayout>
